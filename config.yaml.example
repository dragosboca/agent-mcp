model: anthropic/claude-sonnet-4-20250514
max_tokens: 8096
max_llm_calls: 20
# Directory for cached OAuth tokens (default: ~/.agent-mcp/tokens)
token_dir: ~/.agent-mcp/tokens

servers:
  # OAuth-authenticated HTTP server (opens browser for consent)
  todoist:
    description: "Manage Todoist tasks, projects, and labels"
    transport: http
    url: https://ai.todoist.net/mcp
    auth: oauth

  # Stdio server with API token
  todoist-stdio:
    description: "Manage Todoist tasks, projects, and labels (stdio)"
    transport: stdio
    command: uv
    args:
      - run
      - --directory
      - ~/todoist-mcp-connector
      - todoist-mcp
    env:
      TODOIST_API_TOKEN: ${TODOIST_API_TOKEN}

  shortcut:
    description: "Manage Shortcut stories, epics, iterations, and workflows"
    transport: stdio
    command: npx
    args:
      - -y
      - "@shortcut/mcp@latest"
    env:
      SHORTCUT_API_TOKEN: ${SHORTCUT_API_TOKEN}

  github:
    description: "Interact with GitHub repositories, issues, pull requests, and code"
    transport: http
    url: https://api.githubcopilot.com/mcp/
    headers:
      Authorization: "Bearer ${GITHUB_TOKEN}"
